{
  "rules": {
    "global_chat": {
      ".read": true,
      ".write": "newData.hasChildren(['name', 'message']) || !newData.exists()", 
      "$message_id": {
         ".validate": "newData.hasChildren(['name', 'message'])"
      }
    },
    "chat_shutdown": {
      ".read": true,
      ".write": true
    },
    "global_chat_mutes": {
      ".read": true,
      ".write": true
    },
    "stats": {
      ".read": true,
      ".write": true
    },
    "feedback": {
      ".read": true,
      ".write": true
    },
    "dev_chat": {
      ".read": true,
      ".write": true
    }
  }
}