{
  "rules": {
    "global_chat": {
      ".read": true,
      ".write": "newData.hasChildren(['name', 'message']) && newData.child('message').val().length > 0 && newData.child('message').val().length < 500",
      "$message_id": {
        // Allow ANY children as long as name and message exist. 
        // Removing the specific .validate rule that might be too strict or adding 'displayName' to it.
        ".validate": "newData.hasChildren(['name', 'message'])" 
      }
    },
    "global_chat_mutes": {
      ".read": true,
      ".write": true
    },
    "stats": {
      ".read": true,
      ".write": true
    },
    "feedback": {
      ".read": true,
      ".write": true
    },
    "dev_chat": {
      ".read": true,
      ".write": true
    }
  }
}